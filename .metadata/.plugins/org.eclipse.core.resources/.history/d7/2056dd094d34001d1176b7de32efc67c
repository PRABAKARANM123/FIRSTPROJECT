package string;

public class StringDemo2 {
	public static void main(String[] args) {
		StringDemo2 sd = new StringDemo2();
		String[] names = {"naresh", "raju", "muthu"};
		sd.joinWords(names);
	}
	private void joinWords(String[] names) {
		StringBuffer sb = new StringBuffer("Prabu");
		sb.insert(4,'h');
		System.out.println(sb);
		sb.replace(0,3,"MSP");//including zero and excluding 3
		System.out.println("After Repacing   "+sb);
		sb.reverse();
		System.out.println(sb);
	}

}
